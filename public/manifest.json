{
  "name": "closed caption korean",
  "manifest_version": 3,
  "version": "1.2.1",
  "description": "Extension for viewing Korean subtitles and existing subtitles together",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/south-korea16.png",
      "32": "assets/south-korea32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://frontendmasters.com/*", "*://www.udemy.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "assets/south-korea16.png",
    "32": "assets/south-korea32.png",
    "48": "assets/south-korea48.png",
    "128": "assets/south-korea128.png"
  }
}
